@model IEnumerable<Refma.Models.WebArticle>

@{
    ViewBag.Title = "My Articles";
}

<h2>My Articles</h2>

<p>
    @Html.ActionLink("Add new article", "Create", new  { }, new  { @type="button", @class = "btn btn-default" })
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
               
                <b>@Html.ActionLink(item.Title, "Read", new { id = item.ID }) </b> <br />
                 <a href="@Html.DisplayFor(modelItem => item.URL)">Source</a>
            </td>
            <td style="text-align:right">
              
                <a href="@Url.Action("Delete", new { id = item.ID })">
                    <i class="btn-lg glyphicon glyphicon-remove"></i>
                    <span class="sr-only">Delete</span>
                </a>
            </td>
        </tr>
    }

</table>
