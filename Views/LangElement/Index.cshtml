@model PagedList.IPagedList<Refma.Models.LangElement>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "All Words";
}

<h2>All Words</h2>


@using (Html.BeginForm("Index", "LangElement", FormMethod.Get))
{
    <p>
        Find: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />

        Language: @Html.DropDownList("langId", new SelectList(ViewBag.LangList, "Id", "Name", ViewBag.CurrentLangId))
        <input type="submit" value="Filter" />
    </p>
}
  


<table class="table">
    <tr>
        <th>
            Language
        </th>
        <th>
            Value
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lang.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td style="text-align:right">
                @Html.ActionLink("Translate", "Create", "LangElementTranslation", new { langElementId = item.ID }, new { @type = "button", @class = "btn btn-info" })
                @Html.ActionLink("Show Translations", "Index", "LangElementTranslation", new { langElementId = item.ID }, new { @type = "button", @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>

<br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, langId = ViewBag.CurrentLangId, currentFilter = ViewBag.CurrentFilter }))
